import java.util.Scanner;

public class CalculatorController {
	
	String expression;
	CalculatorModel calcModel = new CalculatorModel();
	CalculatorView calcView = new CalculatorView();

	public void getExpression(){
		Scanner s = new Scanner(System.in);
		expression = s.nextLine();
		s.close();
	}
	
	public void setExpression(){
		calcModel.expressionStack.array = expression.split(" ");
		calcModel.expressionStack.index = calcModel.expressionStack.array.length; 
	}
	
	public Double getAnswer(){
		return calcModel.getAnswer();
	}
	
 
}
